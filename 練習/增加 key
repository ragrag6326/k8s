adduser allen 
adduser allen sudo

mkdir /home/allen/.ssh/

cat <<EOF |sudo tee -a /home/allen/.ssh/authorized_keys
ssh-rsa  allen-20221018
EOF

sudo chmod 600 /home/allen/.ssh/authorized_keys
sudo chmod allen:allen /home/allen/.ssh

sudo systemctl restart ssh.service sshd.service



sudo useradd allen
sudo mkdir /home/allen/.ssh/

cat <<EOF |sudo tee -a /home/allen/.ssh/authorized_keys
ssh-rsa  allen-20221018
EOF

sudo chmod 600 /home/allen/.ssh/authorized_keys

sudo chown allen:allen /home/allen/.ssh ; sudo chown allen:allen /home/allen/.ssh/authorized_keys

sudo cat /home/allen/.ssh/authorized_keys

sudo systemctl restart sshd.service